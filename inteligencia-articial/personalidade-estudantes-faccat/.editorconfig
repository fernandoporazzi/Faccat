# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js, css}]
charset = utf-8

[**.jade]
indent_style = space
indent_size = 2

[**.js]
indent_style = space
indent_size = 4

[bin/www]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[public/**.{js, css}]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
